MainScreen:
    name: "main"
    result: result
    toolbar: toolbar

    
    MDFloatLayout:
        MDBoxLayout:
            orientation: 'vertical'
            padding: [dp(10), dp(90), dp(10), dp(10)]
            spacing: dp(15)
                              
            MDCard:
                orientation:'vertical'
                radius:[dp(30),dp(30),dp(30),dp(30)]
                padding:dp(15)
                spacing:sp(15)
                MDTextField:
                    id:user_text
                    hint_text: "Type Your Text Here"
                    font_size: "30sp"
                    text_color: (0,0,1,1)
                    foreground_color: (0,0,1,1)
                    cursor_color: (1, 170/255, 23/255, 1)
                    cursor_width: "2sp"
                    size_hint: .9, .3
                    multiline: True
                    pos_hint: {'center_x': .5, 'center_y': .5}


            MDRaisedButton:
                elevation: 10
                font_size: '20sp'
                pos_hint:{'x': .05,'y': .5}
                size_hint: .9, .13
                text: app.direction_lang
                on_press:app.show_countries_list_bottom_sheet()
             
                
            MDCard:
                orientation:'vertical'
                radius:[dp(30),dp(30),dp(30),dp(30)]
                padding:dp(15)
                spacing:sp(20)
                MDBoxLayout:
                    adaptive_height:True
                
                ScrollView:
                    effect_cls:'ScrollEffect'

                    MDLabel:
                        id: result
                        text_color: (0, 0, 255/255, 0.5)
                        font_size: "30sp"
                        adaptive_height:True
                MDFloatingActionButton:
                    id: text
                    icon: "translate"
                    elevation: 22
                    pos_hint:{'x': .9,'y': .1}
                    on_release: app.translate(user_text.text)
            
                                            
             

        
        
        
        
        
    MDToolbar:
        id: toolbar
        title:  'Exc Translator'
        left_action_items: [["menu", lambda x: nav_drawer.set_state("open") ]]
        elevation: 10
        pos_hint: {"x": 0, "top": 1}
        size_hint_y: .065
    MDNavigationDrawer:
        id: nav_drawer
        BoxLayout:
            orientation: 'vertical'
            spacing: '20dp'
            padding: '20dp'
            MDRectangleFlatButton:
                text: "DARK MODE"
                size_hint: .9, .095
                on_press: self.theme_cls.theme_style = "Dark"
                pos_hint: {"center_x": .5, "center_y": .7}
            MDRectangleFlatButton:
                text: "LIGHT MODE"
                size_hint: .9, .095
                on_press: self.theme_cls.theme_style = "Light"
                pos_hint: {"center_x": .5, "top": 1}
            MDRectangleFlatButton:
                text: "EXIT"
                size_hint: .9, .095
                on_release: app.win_exit()
                pos_hint: {"center_x": .5, "center_y": .7}
            ScrollView:
                          
                          
        
   
                                      
                     